# Server Configuration
PORT=8080
ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://rauth:REPLACE_WITH_STRONG_PASSWORD@localhost:5432/rauth?sslmode=disable
POSTGRES_USER=rauth
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
POSTGRES_DB=rauth

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET=REPLACE_WITH_RANDOM_32_CHAR_SECRET_KEY
JWT_EXPIRATION_HOURS=24

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=REPLACE_WITH_32_BYTE_RANDOM_KEY

# OAuth Provider Credentials (Platform-wide)
# Google OAuth
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_SECRET

# GitHub OAuth
GITHUB_CLIENT_ID=REPLACE_WITH_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=REPLACE_WITH_GITHUB_SECRET

# Facebook OAuth
FACEBOOK_APP_ID=REPLACE_WITH_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=REPLACE_WITH_FACEBOOK_SECRET

# Microsoft OAuth (optional)
MICROSOFT_CLIENT_ID=REPLACE_WITH_MICROSOFT_CLIENT_ID
MICROSOFT_CLIENT_SECRET=REPLACE_WITH_MICROSOFT_SECRET

# Azure Blob Storage (for user avatars)
AZURE_STORAGE_ACCOUNT=REPLACE_WITH_AZURE_ACCOUNT
AZURE_STORAGE_KEY=REPLACE_WITH_AZURE_KEY
AZURE_STORAGE_CONTAINER=avatars

# Platform URL (where your backend is hosted)
PLATFORM_URL=http://localhost:8080

# Email Configuration (SMTP) - Optional in development
# Leave empty to log verification links instead of sending emails
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# Example production configuration:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourplatform.com
